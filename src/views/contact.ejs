<%- include('includes/head') %>
<%- include('includes/nav') %>


<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contact</h1>
            <p class="text-center lead">Create or edit your contact</p>

            <%- include('includes/messages') %>

            <form action="/contact/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group my-3">
                    <label>Name</label>
                    <input value="<%= contact.name %>" type="text" class="form-control my-2" name="name" aria-describedby="nameHelp" placeholder="Enter name">
                  </div>
                  <div class="form-group my-3">
                    <label>Last Name</label>
                    <input value="<%= contact.lastName %>" type="text" class="form-control my-2" name="lastName" aria-describedby="lastnameHelp" placeholder="Enter last name">
                  </div>
                  <div class="form-group my-3">
                    <label>Email</label>
                    <input value="<%= contact.email %>" type="email" class="form-control my-2" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                  </div>
                  <div class="form-group my-3">
                    <label>Phone</label>
                    <input value="<%= contact.phone %>" type="tel" class="form-control my-2" name="phone" aria-describedby="phoneHelp" placeholder="Enter phone number">
                  </div>
                    <button type="submit" class="btn btn-primary my-3">Save</button>
              </form>




        </div>

        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('includes/footer') %>

